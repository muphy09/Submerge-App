{
  "name": "ppas-proposal-builder",
  "version": "1.1.5",
  "description": "PPAS Proposal Builder",
  "main": "main.js",
  "scripts": {
    "dev": "node dev-start.js",
    "dev:react": "vite",
    "dev:electron": "wait-on tcp:5173 && cross-env NODE_ENV=development node_modules/electron/dist/electron.exe .",
    "build:renderer": "vite build",
    "test:electron": "cross-env NODE_ENV=production npx electron .",
    "build": "tsc && vite build && electron-builder",
    "build:win": "npm run build -- --win",
    "build:exe": "vite build && electron-builder --win portable",
    "build:mac": "npm run build -- --mac",
    "build:linux": "npm run build -- --linux",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "pool",
    "proposal",
    "design"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "better-sqlite3": "^11.0.0",
    "electron-updater": "^6.6.2",
    "html2canvas": "^1.4.1",
    "jspdf": "^2.5.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.22.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.9",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@electron/notarize": "^2.2.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^29.4.6",
    "electron-builder": "^24.13.3",
    "png-to-ico": "^3.0.1",
    "typescript": "^5.4.2",
    "vite": "^5.1.6",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.ppas.proposalbuilder",
    "productName": "PPAS Proposal Builder",
    "artifactName": "${productName} v${version}-${arch}.${ext}",
    "afterSign": "scripts/notarize.js",
    "publish": [
      {
        "provider": "github",
        "owner": "muphy09",
        "repo": "Premier-Pools",
        "releaseType": "release"
      }
    ],
    "directories": {
      "output": "portable builds"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "CHANGELOG.md",
      "preload-script.js",
      "src/database/**/*",
      "icon.ico",
      "*.png",
      "package.json",
      "!**/*.ts",
      "!*.ts"
    ],
    "asarUnpack": [
      "**/*.node",
      "node_modules/better-sqlite3/**/*"
    ],
    "asar": true,
    "fileAssociations": [
      {
        "ext": "ppas",
        "name": "PPAS Proposal File",
        "description": "PPAS Pool Proposal",
        "icon": "icon.png",
        "role": "Editor"
      }
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "icon.png"
    },
    "mac": {
      "identity": null,
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "hardenedRuntime": false,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.inherit.plist",
      "gatekeeperAssess": false,
      "icon": "icon.png",
      "category": "public.app-category.productivity"
    }
  }
}
