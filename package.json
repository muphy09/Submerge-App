{
  "name": "ppas-proposal-builder",
  "version": "1.0.0",
  "description": "PPAS Proposal Builder",
  "main": "main.js",
  "scripts": {
    "dev": "node dev-start.js",
    "dev:react": "vite",
    "dev:electron": "wait-on tcp:5173 && cross-env NODE_ENV=development npx electron .",
    "build:renderer": "vite build",
    "test:electron": "cross-env NODE_ENV=production npx electron .",
    "build": "tsc && vite build && electron-builder",
    "build:win": "npm run build -- --win",
    "build:exe": "vite build && electron-builder --win portable",
    "build:mac": "npm run build -- --mac",
    "build:linux": "npm run build -- --linux",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "pool",
    "proposal",
    "design"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "better-sqlite3": "^11.0.0",
    "html2canvas": "^1.4.1",
    "jspdf": "^2.5.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.22.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.9",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^29.0.0",
    "electron-builder": "^24.13.3",
    "typescript": "^5.4.2",
    "vite": "^5.1.6",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.ppas.proposalbuilder",
    "productName": "PPAS Proposal Builder",
    "artifactName": "${productName} v${version}.${ext}",
    "directories": {
      "output": "portable builds"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload-script.js",
      "src/database/**/*",
      "*.png",
      "package.json",
      "!**/*.ts",
      "!*.ts"
    ],
    "asarUnpack": [
      "**/*.node",
      "node_modules/better-sqlite3/**/*"
    ],
    "asar": true,
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": ["x64"]
        },
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico"
    }
  }
}
